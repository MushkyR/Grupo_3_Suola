<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
        <title>TODOS LOS PRODUCTOS</title>
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/styles-products.css">
</head>
<body>
    <%- include("../partials/header") %>

        <main>
            <% if ( locals.isLogged && user.categoria == 'admin' ) { %>
                <div class="botones_pd">
                    <a href="/products/add" class="boton_envio_pd" >Agregar Producto</a><br>
                </div>
            <% }  %>
            
            <section class="galeria-producto">

            
                <% productos.forEach(function(item) {%> 

                    <div class="art-galeria-producto">
                  <img class="img-galeria-producto" src="../../<%- item.img %>"/><br>
                <div class="detalles-producto">
                <%-item.nombreArticulo%><br>


                <p>$<%-item.precioArticulo%><br></p>

                    
                        </div>
                            <a href="/products/<%- item.id%>" class="boton-ver-producto">VER</a>
                        </div>

                
                <%}) %>
                



            </section>

            <%- include('../partials/whatsappIcon') %>
        </main>


        <%- include("../partials/footer") %>
</body>
</html>